                           FontWeight="DemiBold"
                           FontSize="28"
                           />
                        <ic:SymbolIcon
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Top"
                            Symbol="PlayCircle"
                            IsFilled="True"
                            FontSize="28"
                        />
